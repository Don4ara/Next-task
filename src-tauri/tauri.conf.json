{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Next-task",
  "version": "0.0.2",
  "identifier": "com.don4ara.nexTask",
  "build": {
    "frontendDist": "../out",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Next-task",
        "url": "/",
        "visible": false,
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false,
        "backgroundColor": "#0b0d10"
      },
      {
        "label": "splashscreen",
        "url": "/splashscreen.html",
        "width": 420,
        "height": 320,
        "decorations": false,
        "alwaysOnTop": true,
        "center": true,
        "resizable": false
      }
    ],
    "security": { "csp": null }
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEY0MkNENzA3MzM5RTYxQTIKUldTaVlaNHpCOWNzOUZqQXgyMzVNNmNRdkREY29raHRqaEIwRnlJV0lBYnNpSmQyZGU5QzkxTnkK",
      "endpoints": [
        "https://github.com/Don4ara/Next-task/releases/latest/download/latest.json"
      ]
    }
  },
  "bundle": {
    "createUpdaterArtifacts": true,
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
